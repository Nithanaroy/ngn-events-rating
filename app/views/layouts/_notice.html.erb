<!--'type' can be either of ['success', 'info', 'warning', 'danger']-->

<% unless notice.blank? %>
	<% type ||= flash[:type] %>
	<% type ||= 'info' %>
	<% type = 'info' unless %w(success info warning danger).include?(type) %>
	<p class="alert alert-<%= type %>">
		<%= notice %>
		<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
	</p>

	<script type="text/javascript">
	  $(window).scrollTop(0);
	</script>
<% end %>