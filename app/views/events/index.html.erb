<h1>Listing events</h1>

<%= paginate @events if @events %>

<table class="table table-striped table-bordered table-responsive">
  <thead>
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Place</th>
    <th>From</th>
    <th>To</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.details %></td>
        <td><%= event.place %></td>
        <td><%= event.from %></td>
        <td><%= event.to %></td>
        <td><%= event.rating %></td>
        <td><%= link_to 'Show', event, :class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render :partial => 'layouts/pagination' %>

<br>

<%= link_to 'New Event', new_event_path, :class => "btn btn-success" %>
